#include "npssel.view"
#include "IOUtils.fnc"

// include consortium port desired changes
#include "consort_fix.fnc"

#include "baseline_all_elec.mdl"

MODELNAME = "Baseline All Electric Example";

/**
 --------------------
 | Run Solver Cases |
 --------------------
**/

setOption("switchDes", "DESIGN");
autoSolverSetup();

cout << "=======================\n"
     << "====== On-Design ======\n"
     << "=======================\n\n";

run(); CASE++;
page.display();
printCaseStats("solver");

int i;
real loads[] = { 16.5, 13, 10, 8, 6, 4, 2, 1, 0.5, 0.25 }; // [kilowatts]

setOption("switchDes", "OFFDESIGN");
autoSolverSetup();

cout << "=======================\n"
     << "====== Off-Design =====\n"
     << "=======================\n\n";

for (i = 0; i < loads.entries(); i++) {
  cout << "Power Demand: " << loads[i] << " kW\n\n";
  allElectric.Load.Pdemand = loads[i];
  run(); CASE++;
  page.display();
  printCaseStats("solver");
}
