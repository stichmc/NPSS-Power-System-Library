// create and ACsource
class ACSource extends Element {
  ElectricOutputPort EP_O;
  ElectricInputPort EP_I1, EP_I2;
}

real defaultFrequency = 60.;

ACSource ACS{
  void postexecute(){
    EP_O.frequency = 60.;
    EP_O.setIVRMS(cmplx_zero, V_out);
    EP_I1.setIVRMS(cmplx_zero, cmplx_zero);
    EP_I2.setIVRMS(cmplx_zero, cmplx_zero);
  }
}

Enode n1 {
  ElectricInputPort EP_I;
  ElectricOutputPort EP_O1, EP_O2;
  frequency = 60.;

  V_RMS.set(120 - 70, 40); // guess value
}

Enode n2 {
  ElectricInputPort EP_I;
  ElectricOutputPort EP_O;
  frequency = 60.;

  V_RMS.set(12 - 70 + 8, 40 + 6.98); // guess value
}

Capacitor C1 {
  C = 10e-6;  
}

Inductor L1 {
  L = 500e-3;
}

Capacitor C2 {
  C = 1e-6;
}

Resistor R1 {
	R = 500;
}

linkPorts("ACS.EP_O", "C1.EP_I", "PORT1");
linkPorts("C1.EP_O", "n1.EP_I" ,"NODE2");
linkPorts("L1.EP_I", "n1.EP_O1", "NODE3");
linkPorts("L1.EP_O", "n2.EP_I", "NODE4");
linkPorts("C2.EP_I", "n2.EP_O", "NODE5");
linkPorts("C2.EP_O", "ACS.EP_I1", "PORT6");
linkPorts("R1.EP_I", "n1.EP_O2", "NODE7");
linkPorts("R1.EP_O", "ACS.EP_I2", "PORT8");

setOption("ElectricPowerType", "AC3");
